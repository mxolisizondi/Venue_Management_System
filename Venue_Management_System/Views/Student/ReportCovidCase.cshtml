@model Venue_Management_System.ViewModels.ReportCaseViewModel
@{
    ViewBag.Title = "ReportCovidCase";
    Layout = "~/Views/Shared/_StudentLayout_H.cshtml";
}

<h2>ReportCovidCase</h2>

@using (Html.BeginForm("ReportCovidCase", "Student",FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal m-t-20", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ReportCase.UserId)
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.ReportCase.TestDate, new { @class = "form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReportCase.TestDate, new { htmlAttributes = new { @class = "form-control", @id = "example-date", @name = "date", @type = "date" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ReportCase.covidStatusId, new { @class = "form-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.ReportCase.covidStatusId, new SelectList(Model.CovidStatuses, "Id", "Status"), "Select status", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="form-label">File Upload</label>
            <div class="col-md-10">
                <div class="custom-file">
                    <input type="file" name="file" multiple="multiple" required>
                </div>
            </div>
        </div>

        <div class="form-group mt-2">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-danger" value="Report Case" />
            </div>
        </div>
    </div>
}
