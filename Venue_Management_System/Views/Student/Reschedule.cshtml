@model Venue_Management_System.Models.BookVenue
@{
    ViewBag.Title = "Reschedule";
    Layout = "~/Views/Shared/_StudentLayout_H.cshtml";
}

<h2>Reschedule</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.VenueId)
    @Html.HiddenFor(model => model.bookVenueCategoryId)

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.BookingDate, new { @class = "form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BookingDate, new { htmlAttributes = new { @class = "form-control", @name = "date", id = "example-date", @type = "date" } })
                </div>
               
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.StartingTime, new { @class = "form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.StartingTime, new { htmlAttributes = new { @class = "form-control", id = "example-time", name = "time", @type = "time" } })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.LeavingTime, new { @class = "form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LeavingTime, new { htmlAttributes = new { @class = "form-control", id = "example-time", name = "time", @type = "time" } })
                </div>
            </div>
        </div>
        <div class="form-group mt-2">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-danger" value=" Reschedule" />
            </div>
        </div>
    </div>
}
@section scripts
{
    <script>
        $(document).ready(function () {
            $('#selectGroup').hide();
            $('input[name=SelectedCategory]').click(function () {
                console.log($('input[name=SelectedCategory]:checked').val());
                if ($('input[name=SelectedCategory]:checked').val() === "2") {
                    $('#selectGroup').show();
                } else {
                    $('#selectGroup').hide();
                }
            });
        });
    </script>
}
