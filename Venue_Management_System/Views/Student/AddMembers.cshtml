@model Venue_Management_System.ViewModels.GroupViewModel
@{
    ViewBag.Title = "AddMembers";
    Layout = "~/Views/Shared/_StudentLayout_H.cshtml";
}

<h2>AddMembers</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mb-3">
            @Html.LabelFor(m => m.GroupMembers.Id, new { @class = "form-label" })
            @Html.DropDownListFor(m => m.GroupMembers.Id, new SelectList(Model.Groups, "Id", "Name"), "Select Campus", new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Student.StudentNumber, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Student.StudentNumber, new { @class = "form-control", @placeholder = "Enter the name of the venue" })
        </div>
        <div class="mb-3">
            <input type="submit" class="btn btn-danger mb-2" value=" Add Venue" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
