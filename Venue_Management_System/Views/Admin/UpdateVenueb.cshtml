@model IEnumerable<Venue_Management_System.Models.Venue>

@{
    ViewBag.Title = "UpdateVenue";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (!Model.Any())
{
    <p>There are no venues please add venues</p>
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-lg-8">
                            <form class="row gy-2 gx-2 align-items-center">
                                <div class="col-auto">
                                    <label for="inputPassword2" class="visually-hidden">Search</label>
                                    <input type="search" class="form-control" id="inputPassword2" placeholder="Search...">
                                </div>
                                <div class="col-auto">
                                    <div class="ms-sm-2">
                                        <label for="status-select">Status</label>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <div class="me-sm-2">
                                        <select class="form-select" id="status-select">
                                            <option selected>Choose...</option>
                                            <option value="1">Paid</option>
                                            <option value="2">Awaiting Authorization</option>
                                            <option value="3">Payment failed</option>
                                            <option value="4">Cash On Delivery</option>
                                            <option value="5">Fulfilled</option>
                                            <option value="6">Unfulfilled</option>
                                        </select>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-lg-4">
                            <div class="text-lg-end">
                                <a type="button" class="btn btn-danger mb-2 me-2" href="@Url.Action("AddVenue","Admin")"><i class="mdi mdi-basket me-1"></i> Add New Venue</a>
                                <!-- Sign Up modal -->
                                <a type="button" class="btn btn-danger mb-2" href="@Url.Action("AddVenueCategory","Admin")">Add Venue Type</a>
                            </div>
                        </div><!-- end col-->
                    </div>

                    <div class="table-responsive">
                        <table class="table table-centered mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 20px;">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="customCheck1">
                                            <label class="form-check-label" for="customCheck1">&nbsp;</label>
                                        </div>
                                    </th>
                                    <th>Venue Name</th>
                                    <th>Total Sits</th>
                                    <th>Sits Allowed</th>
                                    <th>Number of Sits Available</th>
                                    <th>Venue Type</th>
                                    <th>Venue Status</th>
                                    <th>Campus</th>
                                    <th style="width: 125px;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var venue in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" id="customCheck2">
                                                <label class="form-check-label" for="customCheck2">&nbsp;</label>
                                            </div>
                                        </td>
                                        <td>
                                            @venue.Name
                                        </td>
                                        <td>
                                            @venue.NumberOfSits
                                        </td>
                                        <td>
                                            @venue.NumberOfSitsAllowed
                                        </td>
                                        <td>
                                            @venue.NumberOfSitsAvailable
                                        </td>
                                        <td>
                                            @venue.VenueType.TypeOfVenue
                                        </td>
                                        <td>
                                            @venue.venueStatus.Status
                                        </td>
                                        <td>
                                            @venue.Campus.Name
                                        </td>
                                        <td>
                                            <a href="javascript:void(0);" class="action-icon" onclick="ViewVenue(@venue.Id)"> <i class="mdi mdi-eye"></i></a>
                                            <a href="javascript:void(0);" class="action-icon" onclick="UpdateVenue(@venue.Id)"> <i class="mdi mdi-square-edit-outline"></i></a>
                                            <a href="javascript:void(0);" class="action-icon" onclick="DeleteSchool(@venue.Id)" data-bs-toggle="modal" data-bs-target="#top-modal"> <i class="mdi mdi-delete"></i></a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div> <!-- end card-body-->
            </div> <!-- end card-->
        </div> <!-- end col -->
    </div>
}
@using (Html.BeginForm("ViewVenue", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="hidden" id="fvenueId" value="" name="id" />
    <input type="submit" id="btnViewVenue" value="ViewVenue" style="display:none" />
}
@using (Html.BeginForm("UpdateVenue", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="hidden" id="fvenueId" value="" name="id" />
    <input type="submit" id="btnDelete" onclick="console.log($('#fvenueId').val())" value="Delete" style="display:none" />
}
@using (Html.BeginForm("RemoveVenue", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="hidden" id="fvenueId" value="" name="id" />
    <input type="submit" id="btnDelete" onclick="console.log($('#fvenueId').val())" value="Delete" style="display:none" />
}
<div id="top-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-top">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="topModalLabel">Alert</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to deactivate this venue??</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="SubmitDeleteForm()">Yes</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

@section scripts
{

    <script>

        function ViewVenue(venueId) {
            $("#fvenueId").val(venueId);
            SubmitViewVenueForm();
        };
        function SubmitViewVenueForm() {
            $("#btnViewVenue").click();
        };

        function DeleteSchool(venueId) {
            console.log(venueId);
            $("#fvenueId").val(venueId);
        };
        function SubmitDeleteForm() {
            $("#btnDelete").click();
        };

    </script>
}