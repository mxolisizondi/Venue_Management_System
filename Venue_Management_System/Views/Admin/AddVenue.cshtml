@model Venue_Management_System.ViewModels.VenueViewModel

@{
    ViewBag.Title = "AddVenue";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddVenue</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Venue.Id)
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mb-3">
            @Html.LabelFor(m => m.Venue.Name, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Venue.Name, new { @class = "form-control", @placeholder = "Enter the name of the venue" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Venue.NumberOfSits, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Venue.NumberOfSits, new { @class = "form-control", @placeholder = "Enter the name of the venue" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Venue.NumberOfSitsAllowed, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Venue.NumberOfSitsAllowed, new { @class = "form-control", @placeholder = "Enter the name of the venue" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Venue.NumberOfSitsAvailable, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Venue.NumberOfSitsAvailable, new { @class = "form-control", @placeholder = "Enter the name of the venue" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Venue.VenueTypeId, new { @class = "form-label" })
            @Html.DropDownListFor(m => m.Venue.VenueTypeId, new SelectList(Model.VenueTypes, "Id", "TypeOfVenue"), "Select type of venue", new { @class = "form-control" })
        </div>
        <div class="mb-3">
            <a href="javascript:void(0);" class="btn btn-danger mb-2"><i class="mdi mdi-plus-circle me-2"></i> Add Venue</a>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
