@model Venue_Management_System.Models.Book

@{
    ViewBag.Title = "ViewVenue";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Book Details</h4>
                <div class="border-top">
                    <div class="form-group row">
                        <label for="fname" class="col-sm-6 text-right control-label col-form-label">Book Name :</label>
                        <div class="col-sm-6">
                            <label for="fname" class="text-right control-label col-form-label">@Model.Name</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-6 text-right control-label col-form-label">Author :</label>
                        <div class="col-sm-6">
                            <label for="fname" class="text-right control-label col-form-label">@Model.Author</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-6 text-right control-label col-form-label">Date Published :</label>
                        <div class="col-sm-6">
                            <label for="fname" class="text-right control-label col-form-label">@Model.DatePublished</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-6 text-right control-label col-form-label">Total Books :</label>
                        <div class="col-sm-6">
                            <label for="fname" class="text-right control-label col-form-label">@Model.TotalBooks</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-6 text-right control-label col-form-label">Available Books :</label>
                        <div class="col-sm-6">
                            <label for="fname" class="text-right control-label col-form-label">@Model.TotalBooksAvailable</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-6 text-right control-label col-form-label">Status of the Book :</label>
                        <div class="col-sm-6">
                            <label for="fname" class="text-right control-label col-form-label">@Model.BookStatus.Status</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="border-top card-body">
                <a class="btn btn-primary" href="javascript:;" onclick="Back()">Back</a>
            </div>

            @using (Html.BeginForm("GetAllBooks", "Admin", FormMethod.Get))
            {
                <input type="submit" id="btnBack" value="No Action" style="display:none" />
            }

        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        function Back() {
            $("#btnBack").click();
        };
    </script>
}